<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
    </style>

    <style name="projectsButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#F08C35</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="mainProject" parent="projectsButton">
        <item name="android:background">#FF0000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AppTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff2373b6</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="container">
        <item name="android:background">#ffdfeaf1</item>
    </style>
</resources>
